
<div class="row">
	<div class="col-8">
		<div class="card card-body">
			<h1><%= title %></h1>
			<form method="POST" action="">
				<div class="form-group">
					<div id="rating-container" class="white">
					<input type="hidden" name="stars" id="stars" value="<%= rating != null ? rating[0].stars : '' %>">
					</div>
				</div>
				<div class="form-group">
					<label for="title" class="font-weight-bold">Title: </label>
					<input style="width:75%;display:inline-block" id="title" name="title" required placeholder="Enter a title for your rating..." class="form-control" value="<%= rating != null ? rating[0].title : "" %>">
				</div>
				<div class="form-group">
					<label for="review">Review: </label>
					<textarea rows="5" class="form-control" id="review" name="review" placeholder="Enter an optional review..."><%= rating != null ? rating[0].review : "" %></textarea>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
			<% if(typeof errors != 'undefined') { %>
				<% errors.forEach(function(error) { %>
					<div class="alert alert-warning alert-dismissible fade show" role="alert">
						<%= error.msg %>
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
				<% }); %>
			<% } %>
		</div>
	</div>
</div>