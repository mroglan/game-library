
<div class="container">
	<div class="row">
		<div class="col-4">
			<div class="profile-div changable" id="profile-div">
				<picture>
					<% if(user.picture) { %>
						<img style="width:100%;height:100%" src="<%= user.picPath %>">
					<% } else {  %>
						<img src="/images/blank_profile.png">
					<% } %>
				</picture>
			</div>
		</div>
		<div class="col-8">
			<div id="user_info" class="changable">
				<h1 class="user_name" id="user_name"><span style="font-size:.5em">Name: </span><span class="input_name"><%= user.name %></span></h1>
				<h1 id="user_email">Email: <span class="input_name"><%= user.email %></span></h1><br>
			</div>
			<div id="user_address">
				<h1 class="text-center mb-4">Mailing Information</h1>
				<% if(user.address) { %>
					<div class="container">
						<div class="row">
							<div class="col-3">
								<h4 class="text-center mb-3">First Name:</h4>
								<p class="text-center"><%= user.first_name %></p>
							</div>
							<div class="col-3">
								<h4 class="text-center mb-3">Last Name:</h4>
								<p class="text-center"><%= user.last_name %></p>
							</div>
							<div class="col-6">
								<h4 class="text-center mb-3">Address:</h4>
								<address class="text-center">
								<%= user.address %>
								</address>
							<div>
						</div>
					</div>
					<div class="text-center col-12"><a href="/users/profile/address">Update Mailing Info</a></div>
				<% } else { %>
					<div class="text-center"><a href="/users/profile/address">Update Mailing Info</a></div>
				<% } %>
			<div>
		</div>
	</div>
</div>